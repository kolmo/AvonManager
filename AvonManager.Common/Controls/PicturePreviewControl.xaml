<UserControl x:Class="AvonManager.Common.Controls.PicturePreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AvonManager.Common.Controls"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="image" Margin="10" MaxWidth="900" />
        <Button x:Name="button" Content="Schließen" HorizontalAlignment="Right" Margin="0,10,10,10" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</UserControl>
