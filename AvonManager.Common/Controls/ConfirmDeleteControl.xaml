<UserControl x:Class="AvonManager.Common.Controls.ConfirmDeleteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AvonManager.Common.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="173*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="10,40,0,0" VerticalAlignment="Top" Width="268"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="73" Margin="10,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="280"/>
        <Button x:Name="buttonCancel" Content="Nein" HorizontalAlignment="Left" Margin="215,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Height="31" Click="buttonCancel_Click"/>
        <Button x:Name="buttonOK" Content="Ja" HorizontalAlignment="Left" Margin="124,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Height="31" Click="buttonOK_Click"/>

    </Grid>
</UserControl>
